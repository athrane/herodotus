{
  "name": "herodotus",
  "version": "1.0.0",
  "description": "A procedural world-building and history generation tool..",
  "main": "dist/bundle.js",
  "type": "module",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --outfile=dist/bundle.js --format=esm --platform=node --tsconfig=tsconfig.json",
    "build:gui": "esbuild src/mainGUI.ts --bundle --outfile=dist/bundle-gui.js --format=esm --platform=node --tsconfig=tsconfig.json",
    "prestart:bundle": "npm run build",
    "start": "npm run start:bundle",
    "start:bundle": "node dist/bundle.js",
    "start:gui": "tsx src/mainGUI.ts --gui",
    "start:main": "tsx src/main.ts",
    "dev": "tsx src/main.ts",
    "start:ts": "tsx src/main.ts",
    "test": "jest --config jest.config.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "prepare": "husky"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-typescript": "^7.27.1",
    "@types/jest": "^30.0.0",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.25.8",
  "jest": "^29.7.0",
  "tsx": "^4.19.2",
  "ts-jest": "^29.4.1",
  "typescript": "^5.9.2",
  "@eslint/js": "^9.9.0",
  "eslint": "^9.9.0",
  "eslint-plugin-jest": "^28.8.3",
  "globals": "^15.11.0",
    "typescript-eslint": "^8.4.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
